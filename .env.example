# Database Configuration
DB_USER=platform_user
DB_PASSWORD=platform_pass
DB_NAME=dataset_platform
DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5432/dataset_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys (Required for LLM integrations)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Optional: For on-premises LLM deployment
LLAMA_ENDPOINT=http://localhost:8080

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=dataset-platform-storage

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Feature Flags
ENABLE_SYNTHETIC_DATA=true
ENABLE_FEDERATED_LEARNING=false
ENABLE_MULTI_CLOUD=false
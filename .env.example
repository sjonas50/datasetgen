# DatasetGen Environment Variables
# Copy this file to .env and fill in your values

# ===== REQUIRED SETTINGS =====

# Anthropic API Key for Claude Sonnet 4
# Get your key from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Secret key for JWT authentication
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# ===== OPTIONAL SETTINGS =====

# Database Configuration
# Default: SQLite (./datasetgen.db)
# For PostgreSQL: postgresql://user:pass@localhost:5432/datasetgen
DATABASE_URL=sqlite:///./datasetgen.db

# Claude Model Configuration
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,txt,csv,json,png,jpg,jpeg

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Authentication
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=datasetgen.log

# Application Settings
ENVIRONMENT=development
DEBUG=True